<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mattermost_partner_form" model="ir.ui.view">
        <field name="name">Mattermost User Settings</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page string="Mattermost">
                    <group string="Mattermost" name="mattermost">
                        <field name="mm_accesstoken" password="True"/>
                    </group>
                </page>
            </notebook>

        </field>
    </record>
</odoo>
